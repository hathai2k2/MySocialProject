<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.mysocialproject.ui.feature.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/scale_up"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.mysocialproject.ui.feature.user.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment2"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/scale_up"
            app:popEnterAnim="@anim/slide_down"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/scale_up"
            app:popEnterAnim="@anim/scale_down"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.mysocialproject.ui.feature.user.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_down"
            app:popEnterAnim="@anim/scale_up"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signUpFragment_to_signupProfileFragment"
            app:destination="@id/signupProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/scale_up"
            app:popEnterAnim="@anim/scale_down"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mysocialproject.ui.feature.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_postFragment"
            app:destination="@id/postFragment"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/scale_down"
            app:popEnterAnim="@anim/scale_up"
            app:popExitAnim="@anim/slide_down" />
    </fragment>
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/scale_down"
        app:popEnterAnim="@anim/scale_up"
        app:popExitAnim="@anim/slide_out_right" />
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.example.mysocialproject.ui.feature.chat.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" >
        <argument
            android:name="typeWallPager"
            app:argType="com.example.mysocialproject.ui.feature.chat.WallPagerChat"
            android:defaultValue="NOTHING" />
    </fragment><action android:id="@+id/action_global_messageFragment" app:destination="@id/messageFragment"/>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.mysocialproject.ui.feature.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" /><action android:id="@+id/action_global_chatFragment" app:destination="@id/chatFragment"/>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.example.mysocialproject.ui.feature.post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.mysocialproject.ui.feature.user.forgot_password.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/signupProfileFragment"
        android:name="com.example.mysocialproject.ui.feature.user.profile.SignupProfileFragment"
        android:label="fragment_signup_profile"
        tools:layout="@layout/fragment_signup_profile" />
    <action android:id="@+id/action_global_splashFragment" app:destination="@id/splashFragment" app:popUpToInclusive="true"/><action android:id="@+id/action_global_signupProfileFragment" app:destination="@id/signupProfileFragment"/>
</navigation>