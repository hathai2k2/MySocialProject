<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.feature.chat.ChatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.example.mysocialproject.ui.custom_view.AppHeader
            android:id="@+id/appHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerIvLeft="@drawable/ic_arrow_left"
            app:headerTitle="Chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appHeader" />
       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/ct_bot"
           android:paddingTop="@dimen/padding_10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/view1">

           <ImageView
               android:id="@+id/imageView4"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_marginStart="@dimen/padding_10dp"
               android:background="@drawable/bg_rounded_input_field"
               android:src="@drawable/ic_gemini"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintDimensionRatio="1:1"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintWidth_percent="0.07" />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/padding_10dp"
               android:text="Chat vá»›i gemini"
               app:layout_constraintStart_toEndOf="@+id/imageView4"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:text="Cach de ko lam do an ma van qua mon "
               app:layout_constraintStart_toStartOf="@+id/textView3"
               app:layout_constraintTop_toBottomOf="@+id/textView3" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1m"
               android:layout_marginEnd="@dimen/padding_10dp"
               app:layout_constraintBottom_toBottomOf="@+id/textView3"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="@+id/textView3" />
       </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            tools:itemCount="5"
            tools:listitem="@layout/item_chat"
            app:layout_constraintTop_toBottomOf="@+id/ct_bot" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>